<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/tv_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10"
            android:background="@drawable/background_normal"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:id="@+id/detail_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toTopOf="parent">

                <include
                    android:id="@+id/tv_action_1"
                    layout="@layout/item_device_area" />

                <include
                    android:visibility="gone"
                    android:id="@+id/tv_action_11"
                    layout="@layout/item_device_area" />

                <include
                    android:id="@+id/tv_action_2"
                    layout="@layout/item_device_area" />

                <include
                    android:id="@+id/tv_action_3"
                    layout="@layout/item_device_area" />

                <include
                    android:id="@+id/tv_action_4"
                    layout="@layout/item_device_area" />

                <include
                    android:id="@+id/tv_action_5"
                    layout="@layout/item_device_area" />

                <include
                    android:id="@+id/tv_action_6"
                    layout="@layout/item_device_area" />

                <include
                    android:id="@+id/tv_action_7"
                    layout="@layout/item_device_area" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_35"
            android:layout_marginTop="20dp"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_20"
            android:background="@drawable/background_btn_blue"
            android:clickable="true"
            android:drawablePadding="16dp"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:layout_marginBottom="@dimen/dp_20"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>