<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/dp_10"
                            android:layout_height="@dimen/dp_10"
                            android:src="@drawable/icon_red_xingxing" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="处理意见"
                            android:textColor="#333333"
                            android:textSize="@dimen/sp_15" />

                    </LinearLayout>


                    <RelativeLayout
                        android:id="@+id/rl_opinion"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp">


                        <TextView
                            android:id="@+id/tv_opinion"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginTop="@dimen/dp_10"
                            android:layout_marginBottom="3dp"
                            android:background="@null"
                            android:text="通过"
                            android:textColor="@color/black"
                            android:textColorHighlight="#808080"
                            android:textSize="@dimen/sp_14" />

                        <ImageView
                            android:layout_width="@dimen/dp_17"
                            android:layout_height="@dimen/dp_17"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:src="@drawable/jiantou_xia"
                            android:text="20"
                            android:textColor="#808080"
                            android:textSize="@dimen/sp_13" />
                    </RelativeLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.3dp"
                        android:layout_below="@id/tv_order_num"
                        android:layout_marginTop="@dimen/dp_3"
                        android:background="#808080" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/dp_10"
                            android:layout_height="@dimen/dp_10"
                            android:src="@drawable/icon_red_xingxing" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="处理人员"
                            android:textColor="#333333"
                            android:textSize="@dimen/sp_15" />

                    </LinearLayout>


                    <RelativeLayout
                        android:id="@+id/rl_operator"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp">


                        <TextView
                            android:id="@+id/tv_operator"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginTop="@dimen/dp_10"
                            android:layout_marginBottom="1dp"
                            android:background="@null"
                            android:text=""
                            android:textColor="@color/black"
                            android:textColorHighlight="#808080"
                            android:textSize="@dimen/sp_16" />

                        <ImageView
                            android:layout_width="@dimen/dp_17"
                            android:layout_height="@dimen/dp_17"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:src="@drawable/jiantou_xia"
                            android:text="20"
                            android:textColor="#808080"
                            android:textSize="@dimen/sp_13" />
                    </RelativeLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.3dp"
                        android:layout_below="@id/tv_order_num"
                        android:layout_marginTop="@dimen/dp_3"
                        android:background="#808080" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/dp_10"
                            android:layout_height="@dimen/dp_10"
                            android:src="@drawable/icon_red_xingxing" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="处理完成日期"
                            android:textColor="#333333"
                            android:textSize="@dimen/sp_15" />

                    </LinearLayout>


                    <RelativeLayout
                        android:id="@+id/rl_complete_date"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp">


                        <TextView
                            android:id="@+id/tv_complete_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginTop="@dimen/dp_10"
                            android:layout_marginBottom="3dp"
                            android:background="@null"
                            android:text=""
                            android:textColor="@color/black"
                            android:textColorHighlight="#808080"
                            android:textSize="@dimen/sp_14" />

                        <ImageView
                            android:layout_width="@dimen/dp_17"
                            android:layout_height="@dimen/dp_17"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:src="@drawable/jiantou_xia"
                            android:text="20"
                            android:textColor="#808080"
                            android:textSize="@dimen/sp_13" />
                    </RelativeLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.3dp"
                        android:layout_below="@id/tv_order_num"
                        android:layout_marginTop="@dimen/dp_3"
                        android:background="#808080" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/dp_10"
                            android:layout_height="@dimen/dp_10"
                            android:src="@drawable/icon_red_xingxing" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="处理完成时间"
                            android:textColor="#333333"
                            android:textSize="@dimen/sp_15" />

                    </LinearLayout>


                    <RelativeLayout
                        android:id="@+id/rl_complete_time"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp">


                        <TextView
                            android:id="@+id/tv_complete_time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginTop="@dimen/dp_10"
                            android:layout_marginBottom="3dp"
                            android:background="@null"
                            android:text=""
                            android:textColor="@color/black"
                            android:textColorHighlight="#808080"
                            android:textSize="@dimen/sp_14" />

                        <ImageView
                            android:layout_width="@dimen/dp_17"
                            android:layout_height="@dimen/dp_17"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:src="@drawable/jiantou_xia"
                            android:text="20"
                            android:textColor="#808080"
                            android:textSize="@dimen/sp_13" />
                    </RelativeLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.3dp"
                        android:layout_below="@id/tv_order_num"
                        android:layout_marginTop="@dimen/dp_3"
                        android:background="#808080" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="备注"
                        android:textColor="#333333"
                        android:textSize="@dimen/sp_15" />


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="35dp">
                        <EditText
                            android:id="@+id/et_note"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginTop="@dimen/dp_10"
                            android:layout_marginBottom="2dp"
                            android:background="@null"
                            android:hint="请输入备注"
                            android:textColor="@color/black"
                            android:textColorHighlight="#808080"
                            android:textSize="@dimen/sp_16" />

                        <TextView
                            android:id="@+id/tv_location_location_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:text="20"
                            android:textColor="#808080"
                            android:textSize="@dimen/sp_13" />
                    </RelativeLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.3dp"
                        android:layout_below="@id/tv_order_num"
                        android:layout_marginTop="@dimen/dp_3"
                        android:background="#808080" />

                </LinearLayout>


            </LinearLayout>


        </androidx.core.widget.NestedScrollView>





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="0"
            android:orientation="horizontal"
            android:layout_gravity="bottom"
            android:layout_marginBottom="@dimen/dp_70"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/btn_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@drawable/btn_cancal_bg"
                android:gravity="center"
                android:layout_weight="1"
                android:paddingTop="@dimen/dp_12"
                android:paddingBottom="@dimen/dp_12"
                android:text="取消"
                android:textColor="@color/common_blue"
                android:textSize="17sp" />

            <TextView
                android:layout_weight="1"
                android:id="@+id/btn_submit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_20"
                android:background="@drawable/btn_color"
                android:gravity="center"
                android:paddingTop="@dimen/dp_12"
                android:paddingBottom="@dimen/dp_12"
                android:text="@string/btn_save"
                android:textColor="@color/white"
                android:textSize="17sp" />

        </LinearLayout>



    </LinearLayout>


</LinearLayout>