<?xml version="1.0" encoding="utf-8"?>


<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ddd">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/re_map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>


        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_35"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@drawable/dev_nap_right_btn_bg">

            <com.kyle.radiogrouplib.NestedRadioGroup
                android:id="@+id/nestedGroup1"
                android:layout_width="@dimen/dp_45"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="@dimen/dp_5">

                <com.kyle.radiogrouplib.NestedRadioLayout
                    android:id="@+id/rl_lamp_ser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/iv_lamp_ser"
                        android:layout_width="@dimen/dp_22"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/icon_search_map" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/iv_lamp_ser"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dp_7"
                        android:background="@color/picture_transparent"
                        android:button="@null"
                        android:duplicateParentState="true"
                        android:text="搜索"
                        android:textColor="@drawable/selector_dev_map_right_btn_check_text_color"
                        android:textSize="11sp" />


                </com.kyle.radiogrouplib.NestedRadioLayout>

                <View
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="0.3dp"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:background="@color/text_color_333333" />

                <com.kyle.radiogrouplib.NestedRadioLayout
                    android:id="@+id/rl_lamp_sel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/iv_lamp_sel"
                        android:layout_width="@dimen/dp_22"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/icon_fiddler_map" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/iv_lamp_sel"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dp_7"
                        android:background="@color/picture_transparent"
                        android:button="@null"
                        android:duplicateParentState="true"
                        android:text="筛选"
                        android:textColor="@drawable/selector_dev_map_right_btn_check_text_color"
                        android:textSize="11sp" />

                </com.kyle.radiogrouplib.NestedRadioLayout>

            </com.kyle.radiogrouplib.NestedRadioGroup>
        </ScrollView>

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_170"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@drawable/dev_nap_right_btn_bg">

            <com.kyle.radiogrouplib.NestedRadioGroup
                android:id="@+id/nestedGroup2"
                android:layout_width="@dimen/dp_45"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="@dimen/dp_5">

                <com.kyle.radiogrouplib.NestedRadioLayout
                    android:id="@+id/rl_lamp_pole"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/iv_lamp_pole"
                        android:layout_width="@dimen/dp_22"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/selector_map_right_item_img_pole" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/iv_lamp_pole"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dp_7"
                        android:background="@color/picture_transparent"
                        android:button="@null"
                        android:duplicateParentState="true"
                        android:text="灯杆"
                        android:textColor="@drawable/selector_dev_map_right_btn_check_text_color"
                        android:textSize="11sp" />


                </com.kyle.radiogrouplib.NestedRadioLayout>

                <View
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="0.3dp"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:background="@color/text_color_333333" />

                <com.kyle.radiogrouplib.NestedRadioLayout
                    android:id="@+id/rl_lamp_light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/iv_lamp_light"
                        android:layout_width="@dimen/dp_22"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/selector_map_right_item_img_light" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/iv_lamp_light"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dp_7"
                        android:background="@color/picture_transparent"
                        android:button="@null"
                        android:duplicateParentState="true"
                        android:text="灯具"
                        android:textColor="@drawable/selector_dev_map_right_btn_check_text_color"
                        android:textSize="11sp" />


                </com.kyle.radiogrouplib.NestedRadioLayout>

                <View
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="0.3dp"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:background="@color/text_color_333333" />

                <com.kyle.radiogrouplib.NestedRadioLayout
                    android:id="@+id/rl_power_cabinet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/iv_power_cabinet"
                        android:layout_width="@dimen/dp_22"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/selector_map_right_item_img_power_cabinet" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/iv_power_cabinet"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dp_7"
                        android:background="@color/picture_transparent"
                        android:button="@null"
                        android:duplicateParentState="true"
                        android:text="配电柜"
                        android:textColor="@drawable/selector_dev_map_right_btn_check_text_color"
                        android:textSize="10sp" />


                </com.kyle.radiogrouplib.NestedRadioLayout>


                <View
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="0.3dp"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:background="@color/text_color_333333" />

                <com.kyle.radiogrouplib.NestedRadioLayout
                    android:id="@+id/rl_controller"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/iv_controller"
                        android:layout_width="@dimen/dp_22"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/selector_map_right_item_img_controller" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/iv_controller"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dp_7"
                        android:background="@color/picture_transparent"
                        android:button="@null"
                        android:duplicateParentState="true"
                        android:text="集控"
                        android:textColor="@drawable/selector_dev_map_right_btn_check_text_color"
                        android:textSize="11sp" />


                </com.kyle.radiogrouplib.NestedRadioLayout>

                <View
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="0.3dp"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:background="@color/text_color_333333" />

                <com.kyle.radiogrouplib.NestedRadioLayout
                    android:id="@+id/rl_manhole"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/iv_manhole"
                        android:layout_width="@dimen/dp_22"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/selector_map_right_item_img_manhole" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/iv_manhole"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dp_7"
                        android:background="@color/picture_transparent"
                        android:button="@null"
                        android:duplicateParentState="true"
                        android:text="井盖"
                        android:textColor="@drawable/selector_dev_map_right_btn_check_text_color"
                        android:textSize="11sp" />


                </com.kyle.radiogrouplib.NestedRadioLayout>


            </com.kyle.radiogrouplib.NestedRadioGroup>

        </ScrollView>

        <LinearLayout
            android:id="@+id/ll_back_current_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_15"
            android:background="@drawable/dev_nap_right_btn_bg"
            android:padding="@dimen/dp_10">

            <ImageView
                android:layout_width="@dimen/dp_22"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/icon_back_my_location" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/light_pole"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_65"
            android:visibility="gone"
            android:background="@drawable/dev_nap_right_btn_bg"
            android:padding="@dimen/dp_10">

            <ImageView
                android:layout_width="@dimen/dp_22"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@mipmap/icon_light_setting" />
        </LinearLayout>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_33"
        android:layout_marginLeft="@dimen/dp_115"
        android:layout_marginTop="@dimen/dp_33"
        android:background="@drawable/dev_nap_right_btn_bg"
        android:orientation="horizontal"
        android:padding="@dimen/dp_5">

        <ImageView
            android:id="@+id/iv_dev_count"
            android:layout_width="@dimen/dp_18"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_dev_map_right_btn_lamp_pole" />

        <TextView
            android:id="@+id/tv_dev_count_name"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="灯杆总数："
            android:textColor="@color/text_color_333333"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_dev_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text=""
            android:textColor="@color/common_blue1"
            android:textSize="13sp" />
    </LinearLayout>


    <!--搜索框-->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_15"
        android:visibility="gone"
        android:background="@drawable/dev_nap_right_btn_bg1"
        android:padding="@dimen/dp_7">

        <ImageView
            android:id="@+id/iv_search"
            android:layout_width="@dimen/dp_20"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:adjustViewBounds="true"
            android:src="@drawable/icon_search_map"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tv_search"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="搜索灯杆"
            android:textColor="@color/text_color_999999"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/ll_fiddler"
            app:layout_constraintStart_toEndOf="@id/iv_search"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/ll_fiddler"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_search"
            app:layout_constraintTop_toTopOf="parent">

            <View
                android:layout_width="0.5dp"
                android:layout_height="@dimen/dp_22"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/dp_15"
                android:background="#dddddd" />


            <ImageView
                android:id="@+id/iv_fiddler"
                android:layout_width="21dp"
                android:layout_height="28dp"
                android:layout_marginRight="@dimen/dp_5"
                android:adjustViewBounds="true"
                android:src="@drawable/icon_fiddler_map" />

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.core.widget.NestedScrollView
        android:id="@+id/bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:behavior_hideable="true"
        app:behavior_peekHeight="0dp"
        app:layout_behavior="@string/bottom_sheet_behavior">

        <FrameLayout
            android:id="@+id/fl_bottomsheet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/dp_500" />

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>