<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/dp_10"
                            android:layout_height="@dimen/dp_10"
                            android:src="@drawable/icon_red_xingxing" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="工单名称"
                            android:textColor="#333333"
                            android:textSize="@dimen/sp_15" />

                    </LinearLayout>


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="35dp">

                        <EditText
                            android:id="@+id/et_order_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginTop="@dimen/dp_10"
                            android:background="@null"
                            android:hint="请输入工单名称"
                            android:textColor="@color/black"
                            android:textColorHighlight="#808080"
                            android:textSize="@dimen/sp_16" />


                        <TextView
                            android:id="@+id/tv_order_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:text="20"
                            android:textColor="#808080"
                            android:textSize="@dimen/sp_13" />
                    </RelativeLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.3dp"
                        android:layout_below="@id/tv_order_num"
                        android:layout_marginTop="@dimen/dp_3"
                        android:background="#808080" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/dp_10"
                            android:layout_height="@dimen/dp_10"
                            android:src="@drawable/icon_red_xingxing" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="故障类型"
                            android:textColor="#333333"
                            android:textSize="@dimen/sp_15" />

                    </LinearLayout>


                    <RelativeLayout
                        android:id="@+id/rl_error_type"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp">


                        <TextView
                            android:id="@+id/tv_error_type"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginTop="@dimen/dp_10"
                            android:layout_marginBottom="1dp"
                            android:background="@null"
                            android:text=""
                            android:textColor="@color/black"
                            android:textColorHighlight="#808080"
                            android:textSize="@dimen/sp_16" />

                        <ImageView
                            android:layout_width="@dimen/dp_17"
                            android:layout_height="@dimen/dp_17"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:src="@drawable/jiantou_xia"
                            android:text="20"
                            android:textColor="#808080"
                            android:textSize="@dimen/sp_13" />
                    </RelativeLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.3dp"
                        android:layout_below="@id/tv_order_num"
                        android:layout_marginTop="@dimen/dp_3"
                        android:background="#808080" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/dp_10"
                            android:layout_height="@dimen/dp_10"
                            android:src="@drawable/icon_red_xingxing" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="故障灯杆"
                            android:textColor="#333333"
                            android:textSize="@dimen/sp_15" />

                    </LinearLayout>


                    <RelativeLayout
                        android:id="@+id/rl_location"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp">


                        <TextView
                            android:id="@+id/tv_location"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginTop="@dimen/dp_10"
                            android:layout_marginBottom="3dp"
                            android:background="@null"
                            android:text=""
                            android:textColor="@color/black"
                            android:textColorHighlight="#808080"
                            android:textSize="@dimen/sp_14" />

                        <ImageView
                            android:layout_width="@dimen/dp_17"
                            android:layout_height="@dimen/dp_17"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:src="@drawable/jiantou_xia"
                            android:text="20"
                            android:textColor="#808080"
                            android:textSize="@dimen/sp_13" />
                    </RelativeLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.3dp"
                        android:layout_below="@id/tv_order_num"
                        android:layout_marginTop="@dimen/dp_3"
                        android:background="#808080" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="发生地址"
                        android:textColor="#333333"
                        android:textSize="@dimen/sp_15" />


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="35dp">


                        <EditText
                            android:id="@+id/et_location_location"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginTop="@dimen/dp_10"
                            android:layout_marginBottom="2dp"
                            android:background="@null"
                            android:hint="请输入发生地址"
                            android:textColor="@color/black"
                            android:textColorHighlight="#808080"
                            android:textSize="@dimen/sp_16" />

                        <TextView
                            android:id="@+id/tv_location_location_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:text="20"
                            android:textColor="#808080"
                            android:textSize="@dimen/sp_13" />
                    </RelativeLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.3dp"
                        android:layout_below="@id/tv_order_num"
                        android:layout_marginTop="@dimen/dp_3"
                        android:background="#808080" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="工单描述"
                        android:textColor="#333333"
                        android:textSize="@dimen/sp_15" />


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="35dp">

                        <EditText
                            android:id="@+id/et_work_describe"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginTop="@dimen/dp_10"
                            android:background="@null"
                            android:hint="请输入工单描述"
                            android:textColor="@color/black"
                            android:textColorHighlight="#808080"
                            android:textSize="@dimen/sp_16" />


                        <TextView
                            android:id="@+id/tv_work_describe_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:text="30"
                            android:textColor="#808080"
                            android:textSize="@dimen/sp_13" />
                    </RelativeLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.3dp"
                        android:layout_below="@id/tv_order_num"
                        android:layout_marginTop="@dimen/dp_3"
                        android:background="#808080" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_20"
                        android:text="图片"
                        android:textColor="#333333"
                        android:textSize="@dimen/sp_15" />


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/img_recyclerview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10" />


                </LinearLayout>

            </LinearLayout>


        </androidx.core.widget.NestedScrollView>


        <TextView
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_30"
            android:layout_marginBottom="@dimen/dp_30"
            android:layout_weight="0"
            android:background="@drawable/btn_color"
            android:gravity="center"
            android:paddingTop="@dimen/dp_12"
            android:paddingBottom="@dimen/dp_12"
            android:text="@string/btn_save"
            android:textColor="@color/white"
            android:textSize="17sp" />
    </LinearLayout>


</LinearLayout>