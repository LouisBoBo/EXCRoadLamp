<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dev_map_dev_click_fragment_bg"
    android:minHeight="@dimen/dp_500"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_10"
    android:paddingRight="@dimen/dp_10">


    <View
        android:id="@+id/top_view"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/dev_map_dev_click_fragment_scoll_line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/info_img"
        android:layout_width="@dimen/dp_120"
        android:layout_height="@dimen/dp_160"
        android:layout_marginTop="@dimen/dp_30"
        android:src="@mipmap/icon_cabinet_normal"
        app:layout_constraintTop_toBottomOf="@id/top_view"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_detail"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/dp_10"
        android:text=""
        android:textColor="@color/common_blue"
        android:textSize="15sp"
        android:layout_marginLeft="@dimen/dp_30"
        app:layout_constraintStart_toEndOf="@id/info_img"
        app:layout_constraintTop_toBottomOf="@id/top_view" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:text="名称123"
        android:textStyle="bold"
        android:textColor="@color/text_color_333333"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/tv_detail"
        app:layout_constraintTop_toBottomOf="@id/tv_detail" />

    <TextView
        android:id="@+id/tv_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="888"
        android:layout_marginTop="@dimen/dp_5"
        android:background="@color/radius_button_color_blue"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:paddingLeft="@dimen/dp_5"
        android:paddingRight="@dimen/dp_5"
        app:layout_constraintTop_toBottomOf="@id/tv_name"
        app:layout_constraintStart_toStartOf="@id/tv_detail"/>

    <TextView
        android:id="@+id/tv_project"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:singleLine="true"
        android:text="所属项目：9999999"
        android:textColor="@color/text_color_333333"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/tv_num"
        app:layout_constraintStart_toStartOf="@id/tv_detail"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_center_control_count"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_10"
        android:singleLine="true"
        android:text="管理集控数：666"
        android:textColor="@color/text_color_333333"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/tv_detail"
        app:layout_constraintTop_toBottomOf="@id/tv_project"
        app:layout_constraintEnd_toEndOf="parent"/>


    <TextView
        android:id="@+id/tv_area"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_10"
        android:singleLine="true"
        android:text="所属区域：777"
        android:textColor="@color/text_color_333333"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/tv_detail"
        app:layout_constraintTop_toBottomOf="@id/tv_center_control_count"
        app:layout_constraintEnd_toEndOf="parent"/>


    <TextView
        android:id="@+id/tv_install_position"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_10"
        android:singleLine="true"
        android:text="安装位置：555555"
        android:textColor="@color/text_color_333333"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/tv_detail"
        app:layout_constraintTop_toBottomOf="@+id/tv_area"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/dp_10"
        app:layout_constraintTop_toBottomOf="@id/tv_install_position"
        app:layout_constraintStart_toStartOf="parent"
        android:text="关联设备"/>

    <TextView
        android:id="@+id/tv_power_watch_update_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:background="@drawable/background_btn_yellow"
        android:textColor="@color/white"
        android:textSize="11sp"
        android:layout_marginLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_5"
        android:paddingLeft="@dimen/dp_5"
        app:layout_constraintBottom_toBottomOf="@id/tv_title"
        app:layout_constraintStart_toEndOf="@id/tv_title"
        app:layout_constraintTop_toTopOf="@id/tv_title" />


    <RelativeLayout
        android:layout_marginTop="@dimen/dp_45"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_normal"
        android:orientation="vertical"
        android:padding="0.3dp"
        app:layout_constraintTop_toBottomOf="@id/tv_install_position">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:listitem="@layout/item_power_cabinet_detil_center_control_list" />
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>