        <LinearLayout
            android:id="@+id/search_base"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_36"
            android:layout_weight="6"
            android:layout_margin="@dimen/dp_10"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/bg_slide_light"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_10"
                android:src="@mipmap/icon_search"/>

            <EditText
                android:id="@+id/search_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:layout_marginRight="@dimen/dp_5"
                android:textSize="@dimen/sp_14"
                android:layout_weight="5"
                android:hint="请输入设备名称或编号"
                android:background="@color/white"/>

            <ImageView
                android:id="@+id/clear_btn"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                android:layout_marginRight="@dimen/dp_5"
                android:visibility="gone"
                android:src="@drawable/icon_red_close"/>

            <View
                android:layout_width="0.5dp"
                android:layout_height="@dimen/dp_22"
                android:layout_gravity="center_vertical"
                android:background="#dddddd" />

            <TextView
                android:id="@+id/btn_search"
                android:layout_width="@dimen/dp_45"
                android:layout_height="@dimen/dp_30"
                android:gravity="center"
                android:textColor="@color/common_blue"
                android:text="搜索"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/select_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_10"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/search_base">

            <include
                android:id="@+id/project_view"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                layout="@layout/item_binding_device"/>

            <include
                android:id="@+id/area_view"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                layout="@layout/item_binding_device"/>

            <include
                android:id="@+id/stree_view"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                layout="@layout/item_binding_device"/>

        </LinearLayout>

<!--        <androidx.recyclerview.widget.RecyclerView-->
