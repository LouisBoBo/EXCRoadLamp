<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="VerifyCode">
        <attr name="codeTextSize" format="dimension"/>
        <attr name="codeBackground" format="color"/>
        <attr name="codeLength" format="integer"/>
        <attr name="isContainChar" format="boolean"/>
        <attr name="pointNum" format="integer"/>
        <attr name="linNum" format="integer"/>
    </declare-styleable>

    <declare-styleable name="HeaderBar">
        <attr name="title_text_clolor" format="color"></attr>
        <attr name="title_text" format="string"></attr>
        <attr name="show_views">
            <flag name="left_text" value="0x01" />
            <flag name="left_img" value="0x02" />
            <flag name="right_text" value="0x04" />
            <flag name="right_img" value="0x08" />
            <flag name="center_text" value="0x10" />
            <flag name="center_img" value="0x20" />
        </attr>
    </declare-styleable>

    <declare-styleable name="SwitchButton">
        <attr name="switch_state" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="ShowListVideoPlayer">
        <attr name="showSwitchBTN" format="boolean"/>
    </declare-styleable>


    <declare-styleable name="PSwitchView">
        <attr name="switch_open_color" format="color" />
        <attr name="switch_close_color" format="color" />
        <attr name="switch_dot_color" format="color" />
        <attr name="switch_slidable" format="boolean" />
        <attr name="switch_dot_margin" format="dimension" />
        <attr name="switch_checked" format="boolean" />
        <attr name="switch_shape">
            <enum name="circular" value="0" />
            <enum name="rectangle" value="1" />
        </attr>
    </declare-styleable>




</resources>